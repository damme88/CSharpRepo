<Window x:Class="BTea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTea"
        xmlns:local2="clr-namespace:BTea.convert"
        mc:Ignorable="d"
        Title="BTea" Height="800" Width="1400"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <local2:ImgConvert x:Key="ImgConvert"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <DockPanel>
                <Menu DockPanel.Dock="Top">
                    <MenuItem Header="File">
                        <MenuItem Header="About"></MenuItem>
                        <MenuItem Header="Close"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="Setting">
                        <MenuItem Header="Setting1"></MenuItem>
                        <MenuItem Header="Setting2"></MenuItem>
                    </MenuItem>
                </Menu>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="1">
            <DockPanel>
                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar>
                        <Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="Đồ uống"
                                Command="{Binding DrinkCmd}">
                        <Image Source="/Images/drink_icon.png"></Image>
                        </Button>
                        <Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="đồ nhâm nhi"
                                Command="{Binding FoodCmd}">
                            <Image Source="/Images/food_icon.png"></Image>
                        </Button>
                        <Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="Topping"
                                Command="{Binding ToppingCmd}">
                            <Image Source="/Images/topping_icon.png"></Image>
                        </Button>
                        <!--<Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="Đồ tổng hợp"
                                Command="{Binding OtherCmd}">
                            <Image Source="/Images/sample.png"></Image>
                        </Button>-->
                        <Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="Doanh thu"
                                Command="{Binding RevenueCmd}">
                            <Image Source="/Images/revenue_icon.png"></Image>
                        </Button>
                        <Button Width="32" Height="32" 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="1"
                                ToolTip="hóa đơn đã bán "
                                Command="{Binding BillCmd}">
                            <Image Source="/Images/bill_icon.png"></Image>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </DockPanel>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <Label FontWeight="Bold" FontSize="14" Margin="5">Danh sách</Label>
                        <RadioButton Margin="5" FontSize="14" IsChecked="{Binding DrinkCheck}">Đồ uống</RadioButton>
                        <RadioButton Margin="5" FontSize="14" IsChecked="{Binding FoodCheck}">Đồ nhâm nhi</RadioButton>
                        <RadioButton Margin="5" FontSize="14" IsChecked="{Binding ToppingCheck}">Topping</RadioButton>
                        <RadioButton Margin="5" FontSize="14" IsChecked="{Binding FoodOtherCheck}">Đồ lặt vặt</RadioButton>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel>
                        <ListView  Height="600" Margin="5" Name="BTeaList" 
                                   ItemsSource="{Binding DataList}"
                                   SelectedItem="{Binding BTeaSelectedItem}"
                                   ScrollViewer.VerticalScrollBarVisibility="Visible"
                                   ScrollViewer.CanContentScroll="False">
                            <ListView.View>
                                <GridView ColumnHeaderContainerStyle="{StaticResource GrdViewHeaderStyle}">
                                    <GridViewColumn Header="Hình ảnh" Width="120">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image Source="{Binding ImgId,Converter={StaticResource ImgConvert}}"  Height="100" Width="100"></Image>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="tên" Width="250">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock  Text="{Binding Name}" FontSize="14" FontWeight="Bold" Foreground="Blue" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="giá" Width="100">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock  Text="{Binding Price}" FontSize="14" FontWeight="Bold" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="ghi chú" Width="150">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Note}" FontSize="14"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tìm kiếm:" Margin="5" FontSize="14" FontWeight="Bold"></TextBlock>
                            <TextBox Width="450" Height="30" Margin="5" Text="{Binding FindItem, UpdateSourceTrigger=PropertyChanged}"/>
                            <Button Width="80" Height="30" 
                                    Margin="5" Content="Chọn" 
                                    Command="{Binding CmdSelectItem}"
                                    FontSize="14"
                                    FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Tên sản phẩm :" FontSize="14" Margin="5" HorizontalAlignment="Left"></TextBlock>
                        <TextBox Width="200" Height="30" IsReadOnly="True" Margin="5" HorizontalAlignment="Left"></TextBox>
                        <TextBlock Text="Kích thước :"  FontSize="14" Margin="5" HorizontalAlignment="Left"></TextBlock>
                        <ComboBox Width="200" Height="30" Margin="5" HorizontalAlignment="Left"></ComboBox>
                        <TextBlock Text="Tỉ lệ đường :" FontSize="14" Margin="5" HorizontalAlignment="Left"></TextBlock>
                        <ComboBox Width="200" Height="30" Margin="5" HorizontalAlignment="Left"></ComboBox>
                        <TextBlock Text="Topping :" FontSize="14" Margin="5" HorizontalAlignment="Left"></TextBlock>
                        <ListView Width="200" Height="200" HorizontalAlignment="Left" Margin="5"></ListView>
                        <StackPanel Orientation="Horizontal">
                            <Button Width="50" Height="30" Content="Select" HorizontalAlignment="Left" Margin="5"></Button>
                            <Button Width="50" Height="30" Content="Clear" HorizontalAlignment="Left" Margin="5"></Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="1">
                    <StackPanel Orientation="Vertical">
                        <ListView Width="250" Height="400" HorizontalAlignment="Left" Margin="5"></ListView>
                        <StackPanel Orientation="Horizontal">
                            <Button Width="80" Height="30"  Margin="5" Content="Save"></Button>
                            <Button Width="80" Height="30" Margin="5" Content="Clear"></Button>
                            <Button Width="80" Height="30" Margin="5" Content="Luu Tam"></Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Button Width="80" Height="30"  Margin="5" Content="Print"></Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            
        </Grid>
    </Grid>
</Window>
