<Window x:Class="BTea.FrmOrderBTeaItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTea"
        xmlns:local_convert="clr-namespace:BTea.convert"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Danh sách Đã Bán" Height="600" Width="1300">
    <Window.Resources>
        <local_convert:SizeDrinkConvert x:Key="SizeConvert"/>
        <local_convert:SugarRateConvert x:Key="SugarConvert"/>
        <local_convert:IceRateConvert x:Key="IceConvert"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Số danh mục:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBlock>
                <TextBox Width="100" Height="30" HorizontalAlignment="Center"
                         Text="{Binding OrderItemsCount}"
                         VerticalAlignment="Center"
                         VerticalContentAlignment ="Center"
                         Margin="5" IsReadOnly="True"></TextBox>
                <TextBlock Text="Tổng số lượng Order:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBlock>
                <TextBox Width="100" Height="30" HorizontalAlignment="Center"
                         Text="{Binding TotalOrderItemsCount}"
                         VerticalAlignment="Center"
                         VerticalContentAlignment ="Center"
                         Margin="5" IsReadOnly="True"></TextBox>
                <TextBlock Text="Tổng giá trị:" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBlock>
                <TextBox Width="100" Height="30" HorizontalAlignment="Center" VerticalContentAlignment="Center"
                         Text="{Binding SumPriceItems}"
                         VerticalAlignment="Center" Margin="5" IsReadOnly="True"></TextBox>
                <TextBlock Text="VND" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"></TextBlock>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal" Height="50">
                <TextBlock Text="Thống kê: " VerticalAlignment="Center" Margin="5"></TextBlock>
                <RadioButton IsChecked="{Binding IsCheckTKTotal}" GroupName="TKGroup" VerticalAlignment="Center" Content="Toàn bộ" Margin="5"></RadioButton>
                <RadioButton IsChecked="{Binding IsCheckTKType}" GroupName="TKGroup" VerticalAlignment="Center"  Content="theo loại" Margin="5"></RadioButton>
                <ComboBox IsEnabled="{Binding IsCheckTKType}" ItemsSource="{Binding TKTypeItems}" DisplayMemberPath="Content" SelectedItem="{Binding SeletedTKTypeItem}" Width="100" Height="30" Margin="5"></ComboBox>
                <RadioButton IsChecked="{Binding IsCheckRankItem}" GroupName="TKGroup" VerticalAlignment="Center"  Content="Thứ hạng sản phẩm" Margin="5"></RadioButton>
                <ComboBox IsEnabled="{Binding IsCheckRankItem}" ItemsSource="{Binding TKRankItems}" DisplayMemberPath="Content" SelectedItem="{Binding SeletedTKRankItem}" Width="100" Height="30" Margin="5"></ComboBox>
                <Button Command="{Binding TKApplyCommand}" Style="{StaticResource BtnBase100}" Content="Áp Dụng" Margin="100,5,5,5"></Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <ListView Width="1250" Height="450" 
                      ItemsSource="{Binding OrderItems}" 
                      SelectedItem="{Binding SelectedOrderItem}"
                      Margin="5" HorizontalAlignment="Left" 
                      VerticalAlignment="Center"
                      ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Visible">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mã" Width="50" DisplayMemberBinding="{Binding OrderItemId}"/>
                        <GridViewColumn Header="Tên" Width="200" DisplayMemberBinding="{Binding OrderItemName}"/>
                        <GridViewColumn Header="Số lượng" Width="80" DisplayMemberBinding="{Binding OrderItemNum}"/>
                        <GridViewColumn Header="Giá (VND)" Width="80" DisplayMemberBinding="{Binding OrderItemPrice}"/>
                        <GridViewColumn Header="Size" Width="80" DisplayMemberBinding="{Binding OrderItemSize, Converter={StaticResource SizeConvert}}"/>
                        <GridViewColumn Header="Tỉ lệ đường" Width="100" DisplayMemberBinding="{Binding OrderItemSRate, Converter={StaticResource SugarConvert}}"/>
                        <GridViewColumn Header="Tỉ lệ đá" Width="100" DisplayMemberBinding="{Binding OrderItemIRate, Converter={StaticResource IceConvert}}"/>
                        <GridViewColumn Header="Topping" Width="120" DisplayMemberBinding="{Binding OrderItemTopping}"/>
                        <GridViewColumn Header="Tên hóa đơn" Width="150" DisplayMemberBinding="{Binding OrderItemBillName}"/>
                        <GridViewColumn Header="Ngày tạo" Width="150" DisplayMemberBinding="{Binding OrderItemOrderDate}"/>
                        <GridViewColumn Header="KM" Width="50" DisplayMemberBinding="{Binding OrderItemKM}"/>
                        <GridViewColumn Header="Loại KM" Width="50" DisplayMemberBinding="{Binding OrderItemKMType}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
